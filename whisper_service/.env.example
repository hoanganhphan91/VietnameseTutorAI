# Whisper STT Service Environment Configuration

# Service Configuration
WHISPER_MODEL_SIZE=base
WHISPER_PORT=5001
WHISPER_HOST=0.0.0.0

# Model Options: tiny, base, small, medium, large
# tiny: ~39MB, fastest but less accurate
# base: ~74MB, good balance (recommended for development)
# small: ~244MB, better accuracy
# medium: ~769MB, high accuracy
# large: ~1550MB, best accuracy

# Audio Processing
MAX_AUDIO_SIZE_MB=50
SUPPORTED_FORMATS=wav,mp3,mp4,m4a,webm

# Vietnamese Language Settings
DEFAULT_LANGUAGE=vi
SUPPORT_ACCENT_DETECTION=true
SUPPORT_PRONUNCIATION_SCORING=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Performance
USE_GPU=false
TORCH_THREADS=4